{
  "name": "bot",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug 9229 --watch",
    "start:prod": "node dist/main",
    "dev": "npm run start:debug",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "env:run:dev": "npx dotenv-cli -e .env.development",
    "translate:pull": "npm run env:run:dev -- npx i18nexus-cli pull -p ./src/modules/telegram/i18n/languages/ -ns default --overwrite",
    "translate:import": "npm run env:run:dev -- npx i18nexus-cli import ./src/modules/telegram/i18n/languages/en.json -ns default"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.13.0",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@redis/client": "^1.5.13",
    "@repo/db": "*",
    "@repo/shared": "*",
    "@telegraf/session": "^2.0.0-beta.7",
    "@types/sanitize-html": "^2.9.5",
    "aws-lambda": "^1.0.7",
    "axios": "^1.6.7",
    "dayjs": "^1.11.10",
    "i18next": "^23.8.2",
    "i18next-http-backend": "^2.4.3",
    "lodash.chunk": "^4.2.0",
    "nestjs-telegraf": "^2.7.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.11.0",
    "telegraf": "^4.15.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@repo/configs": "*",
    "@repo/eslint-config": "*",
    "@types/aws-lambda": "^8.10.132",
    "@types/express": "^4.17.17",
    "@types/lodash.chunk": "^4.2.9",
    "@types/node": "^20.11.14",
    "eslint": "^8.42.0",
    "source-map-support": "^0.5.21",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
