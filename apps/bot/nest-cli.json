{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "typeCheck": true,
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {
        "extensions": [".js", ".ts", ".jsx", ".tsx"]
      }
    },
    "assets": [
      {
        "include": "./modules/i18n/**/*.json",
        "watchAssets": true
      }
    ]
  }
}
